<!-- app/views/notes/index.html.erb -->
<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-2xl font-semibold text-gray-900">Notes</h1>
    <p class="mt-2 text-sm text-gray-700">A collection of your markdown notes.</p>
  </div>
</div>

<!-- Search form -->
<div class="mt-6">
  <%= form_with url: notes_path, method: :get, local: true, class: "flex gap-2" do |f| %>
    <%= f.text_field :search, 
        value: params[:search], 
        placeholder: "Search notes...", 
        class: "flex-1 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <%= f.submit "Search", 
        class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md" %>
  <% end %>
</div>

<!-- Grid of notes -->
<div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% @notes.each do |note| %>
    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
      <div class="p-6">
        <!-- TÃ­tulo de la nota -->
        <h3 class="text-lg font-medium text-gray-900 truncate">
          <%= link_to note.title, note, class: "hover:text-blue-600" %>
        </h3>
        
        <!-- Preview of content -->
        <p class="mt-2 text-sm text-gray-600 h-12 overflow-hidden">
          <%= note.preview %>
        </p>
        
        <!-- Metadata and actions -->
        <div class="mt-4 flex justify-between items-center text-xs text-gray-500">
          <span><%= time_ago_in_words(note.created_at) %> ago</span>
          <div class="flex space-x-2">
            <%= link_to "Edit", edit_note_path(note), 
                class: "text-blue-600 hover:text-blue-800" %>
            <%= link_to "Delete", note_path(note), 
                method: :delete, 
                confirm: "Are you sure?", 
                class: "text-red-600 hover:text-red-800" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- empty state -->
<% if @notes.empty? %>
  <div class="text-center py-12">
    <h3 class="text-lg font-medium text-gray-900">No notes yet</h3>
    <p class="mt-2 text-sm text-gray-600">Get started by creating your first note.</p>
    <%= link_to "Create Note", new_note_path, 
        class: "mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md" %>
  </div>
<% end %>