<h1 class="text-2xl font-bold mb-6">New Note</h1>

<%= form_with model: @note, class: "space-y-4" do |f| %>
  <% if @note.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <% @note.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block font-bold mb-2" %>
    <%= f.text_field :title, class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div>
    <%= f.label :content, class: "block font-bold mb-2" %>
    <%= f.text_area :content, rows: 10, 
        class: "w-full px-3 py-2 border rounded font-mono" %>
  </div>

  <div class="flex space-x-2">
    <%= link_to "Cancel", notes_path, class: "px-4 py-2 bg-gray-500 text-white rounded" %>
    <%= f.submit class: "px-4 py-2 bg-blue-500 text-white rounded" %>
  </div>
<% end %>